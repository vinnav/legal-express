extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Practice Area:
      input#name.form-control(type='text', placeholder='Family, Company etc...' name='name' value=(undefined===practicearea ? '' : practicearea.name))
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg